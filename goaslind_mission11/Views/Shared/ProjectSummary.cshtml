@{
}

@model Book

<div class="card m-1 p-1">
    <h1>
        @Model.Title
        <span class="badge rounded-pill bg-primary text-white float-end"><small>$ @Model.Price</small></span>
    </h1>

    <ul>
        <li>@Model.Author</li>
        <li>@Model.Publisher</li>
        <li>@Model.Isbn</li>
        <li>@Model.Classification</li>
        <li>@Model.Category</li>
        <li>@Model.PageCount</li>
    </ul>
</div>